{
  "name": "@newordergame/core",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "src/index.ts",
  "scripts": {
    "start": "cp environment/.env.development .env && nodemon",
    "start:stats-reader": "ts-node ./src/stats/reader",
    "test": "cp environment/.env.development .env && jest --detectOpenHandles --collect-coverage",
    "deploy": "yarn citadel:deploy",
    "citadel:deploy": "yarn docker:build && yarn docker:tag && yarn docker:login && yarn docker:push && yarn citadel:restart",
    "citadel:restart": "yarn citadel:stop; yarn citadel:rm; yarn citadel:pull && yarn citadel:start",
    "citadel:start": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker run -d -p 5000:5000 -p 5050:5050 --name newordergame-core devlysh/newordergame-core",
    "citadel:stop": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker stop newordergame-core",
    "citadel:rm": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker rm newordergame-core",
    "citadel:login": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker login",
    "citadel:pull": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker pull devlysh/newordergame-core",
    "docker:build": "docker build -t core-service .",
    "docker:login": "docker login",
    "docker:tag": "docker tag core-service devlysh/newordergame-core",
    "docker:push": "docker push devlysh/newordergame-core",
    "docker:pull": "docker pull devlysh/newordergame-core",
    "cdk:deploy": "cd aws && cdk deploy; cd ..",
    "cdk:destroy": "cd aws && cdk destroy; cd ..",
    "cdk:diff": "cd aws && cdk diff; cd ..",
    "cdk:synth": "cd aws && cdk synth; cd ..",
    "aws:deploy": "yarn docker:build && yarn aws:docker:tag && yarn aws:docker:login && yarn aws:docker:push && yarn cdk:deploy",
    "aws:docker:tag": "docker tag core-service $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "aws:docker:login": "aws ecr get-login-password | docker login --username AWS --password-stdin $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com",
    "aws:docker:push": "docker push $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "webpack:build": "cp environment/.env.production .env && webpack --mode=production --node-env=production",
    "webpack:watch": "cp environment/.env.development .env && webpack --watch",
    "update-common": "npm i -S @newordergame/common@latest",
    "prettier": "npx prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@newordergame/common": "file:../common",
    "axios": "^0.27.2",
    "cognito-user-pool": "^0.1.13",
    "express": "^4.18.1",
    "geolib": "^3.3.3",
    "minimist": "^1.2.6",
    "moment": "^2.29.3",
    "nanoid": "^3.3.4",
    "pino": "^8.0.0",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/geolib": "^2.0.23",
    "@types/jest": "^27.5.1",
    "@types/leaflet": "^1.7.9",
    "@types/minimist": "^1.2.2",
    "aws-sdk": "^2.1136.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.0.1",
    "dotenv-webpack": "^7.1.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "pino-pretty": "^8.0.0",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "yarn": "^1.22.19"
  }
}

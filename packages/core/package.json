{
  "name": "core-service",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "src/index.ts",
  "scripts": {
    "start": "cp environment/.env.development .env && nodemon",
    "test": "cp environment/.env.development .env && jest --detect-open-handles --collect-coverage",
    "deploy": "npm run citadel:deploy",
    "citadel:deploy": "npm run docker:build && npm run docker:tag && npm run docker:login && npm run docker:push && npm run citadel:restart",
    "citadel:restart": "npm run citadel:stop && npm run citadel:rm && npm run citadel:start",
    "citadel:start": "ssh devlysh@10.108.0.69 docker run -d -p 5000:5000 --name newordergame-core devlysh/newordergame-core",
    "citadel:stop": "ssh devlysh@10.108.0.69 docker stop newordergame-core",
    "citadel:rm": "ssh devlysh@10.108.0.69 docker rm newordergame-core",
    "docker:login": "docker login",
    "docker:tag": "docker tag core-service devlysh/newordergame-core",
    "docker:push": "docker push devlysh/newordergame-core",
    "cdk:deploy": "cd aws && cdk deploy; cd ..",
    "cdk:destroy": "cd aws && cdk destroy; cd ..",
    "cdk:diff": "cd aws && cdk diff; cd ..",
    "cdk:synth": "cd aws && cdk synth; cd ..",
    "docker:build": "docker build -t core-service .",
    "aws:deploy": "npm run docker:build && npm run aws:docker:tag && npm run aws:docker:login && npm run aws:docker:push && npm run cdk:deploy",
    "aws:docker:tag": "docker tag core-service $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "aws:docker:login": "aws ecr get-login-password | docker login --username AWS --password-stdin $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com",
    "aws:docker:push": "docker push $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "webpack:build": "cp environment/.env.production .env && webpack --mode=production --node-env=production",
    "webpack:watch": "cp environment/.env.development .env && webpack --watch",
    "update-common": "npm i -S @newordergame/common@latest",
    "prettier": "npx prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@newordergame/common": "^1.0.28",
    "@types/winston": "^2.4.4",
    "aws-sdk": "^2.1136.0",
    "cognito-user-pool": "^0.1.13",
    "geolib": "^3.3.3",
    "install": "^0.13.0",
    "moment": "^2.29.3",
    "nanoid": "^3.3.4",
    "npm": "^8.9.0",
    "socket.io": "^4.5.0",
    "winston": "^3.7.2"
  },
  "devDependencies": {
    "@types/geolib": "^2.0.23",
    "@types/jest": "^27.5.1",
    "@types/leaflet": "^1.7.9",
    "dotenv": "^16.0.1",
    "dotenv-webpack": "^7.1.0",
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "prettier": "^2.6.2",
    "ts-jest": "^28.0.2",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.7.0",
    "tslint": "^6.1.3",
    "typescript": "^4.6.4",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2"
  }
}

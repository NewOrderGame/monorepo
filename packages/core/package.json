{
  "name": "@newordergame/core",
  "version": "1.0.0",
  "description": "My webpack project",
  "main": "src/index.ts",
  "scripts": {
    "start": "shx cp environment/.env.development .env && nodemon",
    "start:stats-reader": "ts-node ./src/stats/reader",
    "test": "shx cp environment/.env.development .env && jest --detectOpenHandles --collect-coverage",
    "deploy": "yarn citadel:deploy",
    "citadel:deploy": "yarn docker:build && yarn docker:tag && yarn docker:login && yarn docker:push && yarn citadel:restart",
    "citadel:restart": "yarn citadel:stop && yarn citadel:rm && yarn citadel:pull && yarn citadel:start",
    "citadel:start": "cross-env ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker run -d -p 5000:5000 -p 5050:5050 --name newordergame-core devlysh/newordergame-core",
    "citadel:stop": "cross-env ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker stop newordergame-core",
    "citadel:rm": "cross-env ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker rm newordergame-core",
    "citadel:login": "cross-env ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker login",
    "citadel:pull": "cross-env ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker pull devlysh/newordergame-core",
    "docker:build": "docker build -t core-service .",
    "docker:login": "docker login",
    "docker:tag": "docker tag core-service devlysh/newordergame-core",
    "docker:push": "docker push devlysh/newordergame-core",
    "docker:pull": "docker pull devlysh/newordergame-core",
    "cdk:deploy": "cd aws && cdk deploy && cd ..",
    "cdk:destroy": "cd aws && cdk destroy && cd ..",
    "cdk:diff": "cd aws && cdk diff && cd ..",
    "cdk:synth": "cd aws && cdk synth && cd ..",
    "aws:deploy": "yarn docker:build && yarn aws:docker:tag && yarn aws:docker:login && yarn aws:docker:push && yarn cdk:deploy",
    "aws:docker:tag": "docker tag core-service $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "aws:docker:login": "aws ecr get-login-password | docker login --username AWS --password-stdin $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com",
    "aws:docker:push": "docker push $NOG_AWS_ACCOUNT_ID.dkr.ecr.eu-central-1.amazonaws.com/core-service",
    "webpack:build": "shx cp environment/.env.production .env && webpack --mode=production --node-env=production",
    "webpack:watch": "shx cp environment/.env.development .env && webpack --watch",
    "prettier": "npx prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.1",
    "minimist": "^1.2.6",
    "moment": "^2.29.3",
    "nanoid": "^3.3.4",
    "socket.io": "^4.5.0"
  },
  "devDependencies": {
  }
}

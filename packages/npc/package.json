{
  "name": "@newordergame/npc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "shx cp environment/.env.development .env && jest --detectOpenHandles --collect-coverage",
    "start": "shx cp environment/.env.development .env && nodemon",
    "deploy": "yarn citadel:deploy",
    "docker:build": "docker build -t npc-service .",
    "docker:login": "docker login",
    "docker:tag": "docker tag npc-service devlysh/newordergame-npc",
    "docker:push": "docker push devlysh/newordergame-npc",
    "docker:pull": "docker pull devlysh/newordergame-npc",
    "citadel:deploy": "yarn docker:build && yarn docker:tag && yarn docker:login && yarn docker:push && yarn citadel:restart",
    "citadel:restart": "yarn citadel:stop && yarn citadel:rm && yarn citadel:pull && yarn citadel:start",
    "citadel:start": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker run -d --name newordergame-npc devlysh/newordergame-npc",
    "citadel:stop": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker stop newordergame-npc",
    "citadel:rm": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker rm newordergame-npc",
    "citadel:login": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker login",
    "citadel:pull": "ssh $CITADEL_USER@$CITADEL_IP_ADDRESS docker pull devlysh/newordergame-npc",
    "webpack:build": "cross-env NODE_ENV=production shx cp environment/.env.production .env && webpack --mode=production",
    "webpack:watch": "shx cp environment/.env.development .env && webpack --watch",
    "prettier": "npx prettier --write ."
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.27.2",
    "geolib": "^3.3.3",
    "pino": "^8.0.0",
    "socket.io-client": "^4.5.1"
  },
  "devDependencies": {
    "@types/geolib": "^2.0.23",
    "@types/jest": "^28.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "dotenv-webpack": "^7.1.0",
    "jest": "^28.1.1",
    "nodemon": "^2.0.16",
    "pino-pretty": "^8.0.0",
    "shx": "^0.3.3",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0",
    "yarn": "^1.22.19"
  }
}

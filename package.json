    "@types/express": "^4.17.13",
    "@types/geolib": "^2.0.23",
    "@types/jest": "^29.5.3",
    "@types/leaflet": "^1.7.9",
    "@types/minimist": "^1.2.2",
    "@types/node": "20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "aws-cdk-lib": "2.92.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.1",
    "dotenv-webpack": "^8.0.1",
    "eslint": "^8.47.0",
    "husky": "^8.0.3",
